/* 文章场景相关 */
.calendarBox {
  background-color: #FFF;
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  font-size: 30rpx;
  color: #333;
}
.navBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.navBox .enlargeBox {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.navBox .enlargeBox .arrow {
  width: 30rpx;
  height: 30rpx;
}
.navBox .enlargeBox .rightArrow {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.navBox .enlargeBox:last-child {
  justify-content: flex-end;
}
.weekBox {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  text-align: center;
}
.weekBox .item {
  width: calc(100% / 7);
}
.page {
  width: calc(100% - 60rpx);
  height: 100rpx;
  position: relative;
  top: -70rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: -1;
  background-color: #FFF;
}
.pageTwo {
  width: calc(100% - 120rpx);
  top: -150rpx;
  z-index: -2;
}
.list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.list .day {
  width: calc(100% / 7);
  height: 90rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.list .day .lunarCalendar {
  width: 100%;
  font-size: 18rpx;
  margin-top: -20rpx;
}
.list .blur {
  opacity: 0.3;
}
.list .toDay {
  background-color: rgba(225, 5, 144, 0.5);
  color: #FFF;
}

