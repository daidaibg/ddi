.flex {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.flex-direction {
  flex-direction: column;
}
.roomsinner,
.roomlist {
  display: flex;
  flex-wrap: wrap;
}
.roomsinner ._li,
.roomlist ._li {
  width: 100px;
  height: 100px;
  border: #b8b8b8 1px solid;
  border-radius: 6px;
  margin: 10px;
  position: relative;
  overflow: hidden;
}
.roomsinner ._li image,
.roomlist ._li image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.roomsinner ._li ._p,
.roomlist ._li ._p {
  position: absolute;
  bottom: 0;
  font-size: 12px;
  text-align: center;
  left: 0;
  width: 100%;
  line-height: 20px;
  background-color: #d0f2ff;
}
.roomsinner ._li .numindex,
.roomlist ._li .numindex {
  position: absolute;
  width: 26px;
  height: 26px;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  color: #fff;
  z-index: 100;
  text-align: center;
  line-height: 26px;
  font-size: 12px;
  flex-direction: column;
}
.roomsinner ._li .outKill,
.roomlist ._li .outKill {
  width: 100%;
  height: 100%;
  color: #FFF;
  position: absolute;
  z-index: 50;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  font-size: 14px;
}
.roomsinner ._li .usernum,
.roomlist ._li .usernum {
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  color: #FFF;
  padding: 2px 4px;
  border-radius: 4px;
  font-size: 10px;
  line-height: 16px;
}
.roomsinner ._li .roomList-status,
.roomlist ._li .roomList-status {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 60;
}
.roomsinner ._li .roomList-status.roomList-status-ingame,
.roomlist ._li .roomList-status.roomList-status-ingame {
  background: rgba(0, 0, 0, 0.3);
  color: #cb0000;
}
